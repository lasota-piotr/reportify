{
  "name": "backend",
  "version": "0.1.0",
  "scripts": {
    "start": "yarn clearDist && cross-env NODE_ENV=production ts-node --transpile-only src/index.ts",
    "dev": "yarn clearDist && cross-env NODE_ENV=development nodemon --watch src --delay 1 --exec 'ts-node' src/index.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "clearDist": "rm -rf dist/"
  },
  "dependencies": {
    "adm-zip": "^0.4.14",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "helmet": "^3.21.3",
    "jest": "^25.1.0",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.32",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.4",
    "@types/mongoose": "^5.7.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2"
  }
}
